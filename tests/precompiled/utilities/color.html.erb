<div>This is regular text</div>
<div class="text-black">Something here</div>
<div class="text-white">Something here</div>
<div class="text-transparent">Something here</div>
<div class="text-muted">Something here</div>

<% scales = (100..900).step(100).to_a %>
<% colors = %w(gray blue indigo purple pink red orange yellow green teal cyan) %>
<% colors.each do |color| %>
  <% scales.each do |scale| %>
    <div class="text-<%= color %>-<%= scale %>">Something here</div>
  <% end %>
<% end %>
